{% extends "websitetake2.jinja2" %}

{% block content %}
<div class="form-wrapper">
    <h1>Contact Me</h1>

    <form method="POST" action="/contact">
      {{ form.csrf_token }}

      <fieldset class="subject">
        {{ form.subject.label }}
        {{ form.subject(placeholder='Your subject here') }}
        {% if form.subject.errors %}
          <ul class="errors">
            {% for error in form.subject.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <fieldset class="message">
        {{ form.message.label }}
        {{ form.message(placeholder='Your message here') }}
        {% if form.message.errors %}
          <ul class="errors">
            {% for error in form.message.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>
      
      <div class="submit-button">
        {{ form.submit }}
      </div>

    </form>

{% endblock %}