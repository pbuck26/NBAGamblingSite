{% extends "websitetake2.jinja" %}

{% block content %}
<div class="container">
  <h2>Todays Slate</h2> <! Load the date in as a variable>
  <p>Winners only guaranteed</p> <! Add feature to be able select team and get advanced stat graphs>           
  <table class="table table-hover">
    <thead>
      <tr style="text-align:center">
        <th>Home</th>
        <th>Away</th>
        <th>Home Moneyline</th>
	      <th>Pick</th>
	      <th>Prob</th>
      </tr>
    </thead>
    <tbody>


      {%for game in games%}
      <tr style="vertical-align:top">
        <td><img src={{ game['homeTeam'] }} alt="home" width="90" height="60"> </td>
	      <td><img src={{ game['awayTeam'] }} alt="away" width="90" height="60"></td>
	      <td>{{game['homeOdds']}}</td>
	      <td><img src={{ game['pick'] }} alt="pick" width="90" height="60"></td>
	      <td>{{game['prob']}}</td>
      </tr>
      {%endfor%}

    </tbody>
  </table>
</div>
{% endblock %}